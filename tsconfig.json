{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"]
    
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"],    
}
